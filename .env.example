# =========================================
# UMKM-POS API - Environment Configuration
# =========================================
# Copy this file to .env and update with your actual values

# =========================================
# DATABASE CONFIGURATION
# =========================================
# MySQL Database Connection
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:@localhost:3306/db_umkm_pos"

# =========================================
# APPLICATION CONFIGURATION
# =========================================
# Server Port
PORT=3000

# Node Environment (development | production | test)
NODE_ENV=development

# =========================================
# JWT AUTHENTICATION
# =========================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string for production
JWT_SECRET="your_jwt_secret_here"

# JWT Token Expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN="7d"

# =========================================
# API CONFIGURATION
# =========================================
# API Prefix (e.g., /api/v1)
API_PREFIX="api"

# API Version
API_VERSION="v1"

# =========================================
# CORS CONFIGURATION
# =========================================
# Allowed Origins (comma-separated for multiple origins)
# For development: http://localhost:3000,http://localhost:5173
# For production: https://yourdomain.com
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# =========================================
# LOGGING
# =========================================
# Log Level (error | warn | info | debug)
LOG_LEVEL="debug"

# =========================================
# RATE LIMITING (Optional - for production)
# =========================================
# Time to live in seconds
# RATE_LIMIT_TTL=60
# Maximum requests per TTL
# RATE_LIMIT_MAX=100

# =========================================
# FILE UPLOAD (Optional - if needed)
# =========================================
# Maximum file size in bytes (5MB = 5242880)
# MAX_FILE_SIZE=5242880
# Upload directory path
# UPLOAD_PATH="./uploads"
