{
  "info": {
    "_postman_id": "umkm-pos-api-collection",
    "name": "UMKM POS API",
    "description": "Complete API collection for UMKM POS — base URL: {{base_url}} (default: http://localhost:3000/api/v1)\n\nAll protected endpoints require a Bearer token. Use the Login request to get a token, then set it in the collection variable `token`.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string",
      "description": "JWT Bearer token — auto-set by the Login request test script"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
